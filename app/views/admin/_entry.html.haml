%li.alt{ :id => "entry-#{entry.id}" }
  %div{ :style => "float:right;padding-left:5px;" } 
    %img{ :class => 'avatar', :src => entry.gravatar_url, :alt => 'gravatar', :height => 38, :width => 38 }
  %div
    %cite
      = h(entry.author)

    = _("says")
    %br
    %small.entrymetadata= showDate(entry, "LOC")
    %p= h(entry.text)
    %p
      = link_to toggleShowText(entry), url( :controller => "admin/entries", :action => "toggle_show", :id => entry.id )
      = link_to _('EDIT'), url( :controller => "admin/entries", :action => "edit", :id => entry.id )
      = link_to _('DELETE'), url( :controller => "admin/entries", :action => "delete", :id => entry.id )
